<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_item_nameandface"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/y120"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_user_face"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y18"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_64"
            android:textSize="@dimen/y24" />

        <ImageView
            android:id="@+id/iv_item_user_face"
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/avatar" />

    </RelativeLayout>
</LinearLayout>