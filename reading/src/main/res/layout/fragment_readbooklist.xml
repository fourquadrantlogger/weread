<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/green_17"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:src="@drawable/title_jiantou_left_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_mid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="13"
            android:singleLine="true"
            android:text="领读合集"
            android:textColor="@color/white"
            android:textSize="@dimen/y34"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_goto_fragment_mediaplayer"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/music_anim"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x22" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_readbooklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="@dimen/y1"
        android:focusable="true"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

</LinearLayout>