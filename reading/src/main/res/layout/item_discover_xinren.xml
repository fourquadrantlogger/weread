<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_discover_xinren_name"
            android:layout_width="@dimen/y130"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_discover_xinren_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y18"
            android:gravity="center"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/text_64"
            android:textSize="@dimen/y28" />

        <ImageView
            android:id="@+id/iv_discover_xinren_avatar"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y120"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/avatar"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>