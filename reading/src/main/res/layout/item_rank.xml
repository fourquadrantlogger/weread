<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/y25"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_rank_index"
            android:text=" "
            android:textSize="@dimen/y30"
            android:textColor="@color/text_4c"

            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_item_rank_userface"

            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:background="@color/white"
            android:layout_toRightOf="@id/tv_item_rank_index"

            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_item_rank_username"
            android:text=" "
            android:textSize="@dimen/y30"
            android:textColor="@color/text_4c"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/iv_item_rank_userface"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20" />

        <TextView
            android:id="@+id/tv_item_rank_score"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=" "
            android:textSize="@dimen/y30"
            android:textColor="@color/text_4c"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>