<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_youshubang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <com.fengwo.reading.view.Viewsimpletitle
        android:id="@+id/Viewsimpletitle_youshubang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_achieve_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:divider="@color/line"
            android:dividerHeight="@dimen/y1" />

        <include layout="@layout/layout_switchrank" />
    </RelativeLayout>

</LinearLayout>