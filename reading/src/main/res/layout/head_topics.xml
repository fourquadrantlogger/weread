<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_topcs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y320">

        <ImageView
            android:id="@+id/iv_topcs_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_topcs_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/y74"
            android:layout_marginLeft="@dimen/x28"
            android:shadowColor="#88000000"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/y24" />

        <TextView
            android:id="@+id/tv_topcs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_topcs_num"
            android:layout_alignLeft="@+id/tv_topcs_num"
            android:layout_marginBottom="@dimen/y20"
            android:shadowColor="#88000000"
            android:shadowDx="4"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/y48"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topcs_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:padding="@dimen/y28"
        android:text=""
        android:textColor="@color/text_32"
        android:textSize="@dimen/y30" />

    <RelativeLayout
        android:id="@+id/rl_topcs_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_topcs_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/topics_zhankai" />
    </RelativeLayout>

</LinearLayout>