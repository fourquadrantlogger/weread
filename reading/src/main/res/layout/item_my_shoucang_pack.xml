<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_shoucang_pack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y340">

        <ImageView
            android:id="@+id/iv_shoucang_pack_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView_shoucang_pack_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_shoucang_pack_createtime"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y20"
            android:text="a"
            android:textColor="@color/white"
            android:textSize="@dimen/y34"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_shoucang_pack_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="b"
            android:textColor="#ccffffff"
            android:textSize="@dimen/y24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_shoucang_pack_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_shoucang_pack_createtime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:text="c"
            android:textColor="@color/white"
            android:textSize="@dimen/y28"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/e5" />

</LinearLayout>