<?xml version="1.0" encoding="utf-8"?>
<!--我的离线-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_layout"
        android:background="@color/green_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y4">

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28"
                android:src="@drawable/title_jiantou_left_white"
                android:visibility="visible" />
            <TextView
                android:id="@+id/textView_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="共读"
                android:background="@drawable/deep_nav_left"
                android:textColor="@color/white"
                android:textSize="@dimen/y30"

                android:visibility="visible"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_line"
                android:layout_marginRight="@dimen/x40" />
            <View
                android:id="@+id/view_line"
                android:background="@color/white"

                android:layout_width="0.5px"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"></View>
            <TextView
                android:id="@+id/textView_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="美文"

                android:textColor="@color/white"
                android:textSize="@dimen/y30"

                android:visibility="visible"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_line"
                android:layout_marginLeft="@dimen/x40" />

        </RelativeLayout>
    </LinearLayout>

    <!--<com.fengwo.reading.view.Viewsimpletitle
        android:id="@+id/viewsimpletitle_fragment_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->
    <TextView
        android:id="@+id/tv_local_nothing"
        android:layout_marginTop="@dimen/y500"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:text="咦...这里什么都木有~~"
        android:textColor="@color/text_98"
        android:textSize="@dimen/y30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/local_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>