<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_achieve"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y560"
        android:background="@color/green_ec" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y128"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_achieve_title1_count0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y20"
                    android:text="参加有书共读计划"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y26" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y232"
                android:background="@drawable/kuang_grey"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x28"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y80"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/tv_achieve_title1_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/x70"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="读完"
                            android:textColor="@color/text_32"
                            android:textSize="@dimen/y24" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y40"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_achieve_title1_count1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y36" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y26" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tv_achieve_title1_layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x70"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="领先全国"
                            android:textColor="@color/text_32"
                            android:textSize="@dimen/y24" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y40"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_achieve_title1_count4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y36" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y26" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tv_achieve_title1_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x91"
                        android:layout_toRightOf="@+id/tv_achieve_title1_layout1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签到"
                            android:textColor="@color/text_32"
                            android:textSize="@dimen/y24" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y40"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_achieve_title1_count2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y36" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="次"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y26" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tv_achieve_title1_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x91"
                        android:layout_toLeftOf="@+id/tv_achieve_title1_layout4"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="随笔"
                            android:textColor="@color/text_32"
                            android:textSize="@dimen/y24" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y40"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_achieve_title1_count3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y36" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="条"
                                android:textColor="@color/text_32"
                                android:textSize="@dimen/y26" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_achieve_title1_count5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y28"
                    android:text="共1000+书友参与共读计划"
                    android:textColor="@color/text_64"
                    android:textSize="@dimen/y26" />

                <Button
                    android:id="@+id/bt_achieve_title1_add"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginTop="@dimen/y28"
                    android:background="@drawable/btn_achieve"
                    android:text="呼朋唤友一起来读书"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/y103"
            android:layout_height="@dimen/y103"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y77"
            android:background="@drawable/yuan_white"
            android:scaleType="fitXY"
            android:src="@drawable/yuan_white" />

        <ImageView
            android:id="@+id/iv_achieve_title1_avatar"
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y78"
            android:background="@drawable/avatar"
            android:scaleType="fitXY"
            android:src="@drawable/avatar" />
    </RelativeLayout>
    
    <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/line" />

</LinearLayout>