<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_group_item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/group_pf">

        <TextView
            android:id="@+id/tv_group_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:text="是否喜欢有书共读?"
            android:textColor="@color/text_32"
            android:textSize="@dimen/y40"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y60"
            android:layout_below="@+id/tv_group_item_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_group_item_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red_36"
                android:gravity="center"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:text="\t\t喜欢\t\t"
                android:textColor="@color/white"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/tv_group_item_dislike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1.1"
                android:background="@drawable/btn_group_grey"
                android:gravity="center"
                android:paddingLeft="@dimen/x35"
                android:paddingRight="@dimen/x35"
                android:text="不感兴趣"
                android:textColor="@color/text_b3"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/tv_group_item_go"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red_36"
                android:gravity="center"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:text="去应用商店评分"
                android:textColor="@color/white"
                android:textSize="@dimen/y26"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_group_item_fankui"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green_17"
                android:gravity="center"
                android:paddingLeft="@dimen/x50"
                android:paddingRight="@dimen/x50"
                android:text="意见反馈"
                android:textColor="@color/white"
                android:textSize="@dimen/y26"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>