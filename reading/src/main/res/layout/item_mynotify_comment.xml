<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_item_notity_avatar"
            android:layout_width="@dimen/y85"
            android:layout_height="@dimen/y85"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/y20">

            <ImageView
                android:id="@+id/iv_item_notity_avatar"
                android:layout_width="@dimen/y80"
                android:layout_height="@dimen/y80"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/avatar"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/iv_item_notity_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/myinfo_nan" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_notity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y20"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLines="4"
            android:minWidth="45dp"
            android:singleLine="false"
            android:text="title"
            android:textColor="@color/text_64"
            android:textSize="@dimen/y26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:layout_toLeftOf="@+id/tv_item_notity_title"
            android:layout_toRightOf="@+id/rl_item_notity_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_notity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/green"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/tv_item_notity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="time"
                android:textColor="@color/text_98"
                android:textSize="@dimen/y22" />

            <TextView
                android:id="@+id/tv_item_notity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="content"
                android:textColor="@color/text_32"
                android:textSize="@dimen/y26" />

            <ImageView
                android:id="@+id/iv_item_notity_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:src="@drawable/comment_zan_hou" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_item_notity_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/line" />

</LinearLayout>