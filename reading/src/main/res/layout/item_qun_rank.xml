<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_item_qun_layout"
android:layout_width="match_parent"
android:layout_height="@dimen/y140" >

<TextView
    android:id="@+id/tv_item_qun_rank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/x28"
    android:text=""
    android:textSize="@dimen/y30"
    android:textColor="@color/text_a8" />

<TextView
    android:id="@+id/tv_item_qun_rank2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/x28"
    android:text="1000+"
    android:textSize="@dimen/y30"
    android:visibility="invisible"
    android:textColor="@color/text_a8" />


<ImageView
    android:id="@+id/iv_item_qun_avatar"
    android:visibility="invisible"
    android:layout_width="@dimen/y80"
    android:layout_height="@dimen/y80"
    android:layout_centerVertical="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="@dimen/x5"
    android:background="@drawable/avatar"
    android:layout_toRightOf="@+id/tv_item_qun_rank2"
    android:src="@drawable/avatar" />

<TextView
    android:id="@+id/tv_item_qun_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/x28"
    android:text=""
    android:textSize="@dimen/y30"
    android:textColor="@color/text_a8" />

<TextView
    android:id="@+id/tv_item_qun_time2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/x28"
    android:text="00:00:00"
    android:visibility="invisible"
    android:textSize="@dimen/y30"
    android:textColor="@color/text_a8" />

<TextView
    android:id="@+id/tv_item_qun_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/x20"
    android:layout_toRightOf="@+id/iv_item_qun_avatar"
    android:layout_toLeftOf="@+id/tv_item_qun_time2"
    android:text=""
    android:singleLine="true"
    android:ellipsize="end"
    android:layout_marginRight="@dimen/x20"
    android:textSize="@dimen/y36"
    android:textColor="@color/text_32" />

</RelativeLayout>