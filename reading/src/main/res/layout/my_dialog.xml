<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/y550"
    android:layout_height="wrap_content"
    style="@android:style/Animation.Dialog"
    android:background="@drawable/switchbutton_on1"

    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/y40"
        android:textSize="26px"
        android:textColor="@color/text_33"
        android:text="为保护你的流量,需要开启2G/3G/4G网络"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView
        android:textColor="@color/text_33"
        android:textSize="26px"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y40"
        android:id="@+id/tv_dialog_1"
        android:text="播放开关才能播放"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />
    <TextView
        android:textSize="34px"
        android:textColor="@color/text_blue"
        android:textStyle="bold"
        android:id="@+id/tv_dialog_2"
        android:text="开启2G/3G/4G网络播放开关"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/y100"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/e5" />
    <TextView
        android:textColor="@color/text_33"
        android:textSize="34px"
        android:textStyle="bold"
        android:id="@+id/tv_dialog_3"
        android:text="取消"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"/>


</LinearLayout>