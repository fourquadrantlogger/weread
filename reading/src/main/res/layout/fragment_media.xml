<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_mediaplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topimg_fragment_mediaplayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_music_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/x28"
                android:src="@drawable/music_back" />

            <TextView
                android:id="@+id/tv_music_nowindex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1/1"
                android:textColor="@color/white"
                android:textSize="@dimen/y30" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_music_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/y500"
        android:background="#33000000"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ll_music_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/y500"
        android:background="#33000000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_music_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginTop="@dimen/y16"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/y22" />

            <TextView
                android:id="@+id/tv_music_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x28"
                android:layout_marginTop="@dimen/y16"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="@dimen/y22" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_music_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y120"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="aa"
            android:textColor="@color/white"
            android:textSize="@dimen/y36" />

        <TextView
            android:id="@+id/tv_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="aa"
            android:textColor="#99ffffff"
            android:textSize="@dimen/y28" />

        <TextView
            android:id="@+id/tv_music_nextmusic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center"
            android:text="aa"
            android:textColor="#66ffffff"
            android:textSize="@dimen/y24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y80">

            <ImageView
                android:id="@+id/iv_music_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/music_play" />

            <ImageView
                android:id="@+id/iv_music_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x80"
                android:layout_toLeftOf="@+id/iv_music_play"
                android:padding="@dimen/x20"
                android:src="@drawable/music_last" />

            <ImageView
                android:id="@+id/iv_music_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x80"
                android:layout_toRightOf="@+id/iv_music_play"
                android:padding="@dimen/x20"
                android:src="@drawable/music_next" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y60"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_music_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_weight="0.25"
                android:padding="@dimen/x20"
                android:src="@drawable/music_list" />

            <ImageView
                android:id="@+id/imageView_fragment_media_media_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_weight="0.25"
                android:padding="@dimen/x20"
                android:src="@drawable/media_download" />

            <ImageView
                android:id="@+id/imageView_fragment_media_media_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_weight="0.25"
                android:padding="@dimen/x20"
                android:src="@drawable/media_share" />

            <ImageView
                android:id="@+id/imageView_fragment_media_media_clock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_weight="0.25"
                android:padding="@dimen/x20"
                android:src="@drawable/media_clock" />
        </LinearLayout>
    </LinearLayout>

    <SeekBar

        android:id="@+id/sb_music_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"

        android:layout_marginTop="@dimen/y485"
        android:clickable="true"
        android:max="600"

        android:outlineProvider="background"

        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:progress="560"
        android:progressDrawable="@drawable/seekbar_progress"

        android:splitTrack="false"
        android:thumb="@drawable/seekbar_thumb"
        android:thumbOffset="0dip" />
</FrameLayout>