<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_17"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y4">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:src="@drawable/title_jiantou_left_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/y34"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:src="@drawable/youshu"
            android:visibility="gone" />

        <View
            android:id="@+id/view_title_view"
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_title_right"
            android:layout_toStartOf="@+id/iv_title_right"
            android:background="@color/white_29"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_title_right2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x2"
            android:layout_toLeftOf="@+id/iv_title_right"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:src="@drawable/youshu"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/y30"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_right1"
            android:layout_width="@dimen/x94"
            android:layout_height="@dimen/y50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/y30"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x5"
            android:layout_toEndOf="@+id/iv_return"
            android:layout_toLeftOf="@+id/iv_title_right2"
            android:layout_toRightOf="@+id/iv_return"
            android:background="@color/green_17"
            android:hint="请输入书名、话题"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/search_edittext"
            android:textSize="@dimen/y32"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="13"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/y34"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_comment_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/y34"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title_comment_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/y28"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_right_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:gravity="center"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/y10"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/y30"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_title_right_notify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_title_right_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/myinfo_notify" />

            <ImageView
                android:id="@+id/iv_title_right_notify_point"
                android:layout_width="@dimen/y16"
                android:layout_height="@dimen/y16"
                android:layout_alignRight="@+id/iv_title_right_notify"
                android:layout_alignTop="@+id/iv_title_right_notify"
                android:src="@drawable/yuan_red"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10">

        <ProgressBar
            android:id="@+id/pb_title_music_show"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>