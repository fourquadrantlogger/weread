<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">r

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title_view" />

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/sv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/bg"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_search_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_search_jilu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.fengwo.reading.view.MyListView
                    android:id="@+id/lv_search_jilu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/e5" />

                <TextView
                    android:id="@+id/tv_search_detele"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y100"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/delete_qian"
                    android:drawablePadding="@dimen/x12"
                    android:gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="清除历史记录"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_huati"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y60"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="相关话题"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/y32" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginTop="@dimen/y15"
                    android:background="@color/e5" />

                <com.fengwo.reading.view.MyListView
                    android:id="@+id/lv_search_huati"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/e5" />

                <TextView
                    android:id="@+id/tv_search_huati_all"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y100"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/search_qian"
                    android:drawablePadding="@dimen/x15"
                    android:gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="查看更多相关话题"
                    android:textColor="@color/green"
                    android:textSize="@dimen/y30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_jingxuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y60"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="精选随笔"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/y32" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginTop="@dimen/y15"
                    android:background="@color/e5" />

                <com.fengwo.reading.view.MyListView
                    android:id="@+id/lv_search_jingxuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/e5" />

                <TextView
                    android:id="@+id/tv_search_jingxuan"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y100"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/search_qian"
                    android:drawablePadding="@dimen/x15"
                    android:gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="查看更多精选随笔"
                    android:textColor="@color/green"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_shuping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y60"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="所有随笔"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/y32" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginRight="@dimen/x28"
                    android:layout_marginTop="@dimen/y15"
                    android:background="@color/e5" />

                <com.fengwo.reading.view.MyListView
                    android:id="@+id/lv_search_shuping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>