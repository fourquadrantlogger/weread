<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30">

        <ImageView
            android:id="@+id/iv_item_notity_avatar"
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:src="@drawable/youshu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@+id/iv_item_notity_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_notity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有书共读小助手"
                android:textColor="@color/green"
                android:textSize="@dimen/y32" />

            <TextView
                android:id="@+id/tv_item_notity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:text="00-00"
                android:textColor="@color/text_98"
                android:textSize="@dimen/y24" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_notity_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/y26"
        android:text="content"
        android:textColor="@color/text_32"
        android:textSize="@dimen/y28" />

    <ImageView
        android:id="@+id/iv_item_notity_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginTop="@dimen/y20"
        android:maxHeight="@dimen/y400"
        android:maxWidth="@dimen/y400"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20" />

</LinearLayout>