<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_myinfoname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title_view" />

    <LinearLayout
        android:id="@+id/ll_myinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_myinfo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:ems="10"
            android:hint=""
            android:maxLength="5"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_32"
            android:textColorHint="@color/text_32"
            android:textSize="@dimen/y32"/>

        <ImageView
            android:id="@+id/iv_myinfo_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x28"
            android:src="@drawable/myinfo_delete" />
    </LinearLayout>

</LinearLayout>