<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_popupwindow_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:text="定时关闭"
                android:textColor="@color/text_66"
                android:textSize="@dimen/y34" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/line2" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_noclock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_noclock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="不开启 "
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />

                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_noclock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"

                        android:duplicateParentState="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line2" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="播完当前声音 "
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />

                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_0"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line2" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="10分钟后"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />
                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_existtime_10"
                        android:text="倒计时10:00"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/y30"
                        android:layout_toLeftOf="@+id/checkbox_popupwindow_mediaclock_10"
                        android:layout_marginRight="@dimen/x30" />

                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_10"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line2" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="30分钟后"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />


                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_existtime_30"
                        android:text="倒计时30:00"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/y30"
                        android:layout_toLeftOf="@+id/checkbox_popupwindow_mediaclock_30"
                        android:layout_marginRight="@dimen/x30" />


                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_30"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line2" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="60分钟后"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />
                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_existtime_60"
                        android:text="倒计时60:00"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/y30"
                        android:layout_toLeftOf="@+id/checkbox_popupwindow_mediaclock_60"
                        android:layout_marginRight="@dimen/x30" />

                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_60"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/line2" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_popupwindow_mediaclock_90"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y22"
                    android:paddingTop="@dimen/y22">

                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="90分钟后"
                        android:textColor="@color/text_33"
                        android:textSize="@dimen/y30" />
                    <TextView
                        android:id="@+id/textView_popupwindow_mediaclock_existtime_90"
                        android:text="倒计时90:00"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/y30"
                        android:layout_toLeftOf="@+id/checkbox_popupwindow_mediaclock_90"
                        android:layout_marginRight="@dimen/x30" />

                    <cn.reflector.SmoothCheckBox
                        android:id="@+id/checkbox_popupwindow_mediaclock_90"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:clickable="false"
                        app:color_checked="#76e19b"
                        app:color_unchecked="#ffffff"
                        app:color_unchecked_stroke="#d9d9d9"
                        app:stroke_width="2px" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/line2" />

        <TextView
            android:id="@+id/textView_popupwndow_music_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/text_33"
            android:textSize="@dimen/y34" />
    </LinearLayout>

</RelativeLayout>