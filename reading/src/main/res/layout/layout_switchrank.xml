<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/switchrank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearLayout_switchrank_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/switchrank_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日排行"
                android:textColor="@color/green"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_switchrank_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/switchrank_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总排行"
                android:textColor="@color/text_64"
                android:textSize="@dimen/y30" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/switchrank_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/line"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="2">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_achieve_no_qiandao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y200"
        android:src="@drawable/no_qiandao"
        android:visibility="gone" />
</LinearLayout>