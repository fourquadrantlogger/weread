<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_groupdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_groupdetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">

        <RelativeLayout
            android:id="@+id/rl_groupdetails_avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28">

            <ImageView
                android:id="@+id/iv_groupdetails_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/iv_groupdetails_sex"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y24"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_groupdetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_groupdetails_name"
            android:layout_below="@+id/tv_groupdetails_name"
            android:layout_marginTop="2dp"
            android:text="bbb"
            android:textColor="@color/text_98"
            android:textSize="@dimen/y24" />

        <TextView
            android:id="@+id/tv_groupdetails_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_groupdetails_time"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toEndOf="@+id/tv_groupdetails_time"
            android:layout_toRightOf="@+id/tv_groupdetails_time"
            android:text="bbb"
            android:textColor="@color/text_98"
            android:textSize="@dimen/y26" />

        <TextView
            android:id="@+id/tv_groupdetails_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_groupdetails_avatar"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/rl_groupdetails_avatar"
            android:text="ccc"
            android:textColor="@color/green"
            android:textSize="@dimen/y34" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_groupdetails_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/y20"
        android:text=""
        android:textColor="@color/text_32"
        android:textSize="@dimen/y36"
        android:textStyle="bold" />

    <com.fengwo.reading.view.TextView_copypaste
        android:id="@+id/tv_groupdetails_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:lineSpacingExtra="3dp"
        android:text=""
        android:textColor="@color/text_80"
        android:textSize="@dimen/y30" />

    <com.fengwo.reading.view.MyGridView
        android:id="@+id/gv_groupdetails_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/y20"
        android:cacheColorHint="@android:color/transparent"
        android:clipChildren="true"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bookpart_sc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y6"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/y6"
            android:layout_weight="1"
            android:background="@drawable/groupdetails_grey">

            <TextView
                android:id="@+id/tv_bookpart_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/collect_red_no"
                android:drawablePadding="@dimen/x20"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/text_99"
                android:textSize="@dimen/y24" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_bookpart_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@+id/textView7"
            android:layout_weight="1"
            android:src="@drawable/share_wx" />

        <ImageView
            android:id="@+id/iv_bookpart_pyq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x28"
            android:layout_toRightOf="@+id/iv_bookpart_wx"
            android:layout_weight="1"
            android:src="@drawable/share_pyq" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y55"
        android:background="@color/e5" />

    <RelativeLayout
        android:id="@+id/rl_groupdetails_header_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/y45"
            android:layout_height="@dimen/y45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:src="@drawable/comment_zan" />

        <TextView
            android:id="@+id/tv_groupdetails_header_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="center"
            android:text="8人点赞"
            android:textColor="@color/text_99"
            android:textSize="@dimen/y24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@+id/iv_group_header_img"
            android:gravity="center"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/gv_groupdetails_header_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scrollbars="none" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_group_header_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:src="@drawable/title_jiantou_right_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ededed" />

        <TextView
            android:id="@+id/tv_groupdetails_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:text="点赞  "
            android:textColor="@color/text_98"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/tv_groupdetails_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:drawableLeft="@drawable/homepage"
            android:drawablePadding="@dimen/x10"
            android:text="评论 "
            android:textColor="@color/text_32"
            android:textSize="@dimen/y30"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>