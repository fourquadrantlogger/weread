<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_discover_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/y10"
            android:src="@drawable/discover_topic" />

        <ImageView
            android:id="@+id/iv_discover_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/y10"
            android:src="@drawable/discover_activity" />

        <ImageView
            android:id="@+id/iv_discover_books"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/y10"
            android:src="@drawable/discover_books" />

        <ImageView
            android:id="@+id/iv_discover_selection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/y10"
            android:src="@drawable/discover_selection" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_discover_book_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:layout_marginTop="@dimen/y20"
        android:src="@color/white" />
</LinearLayout>