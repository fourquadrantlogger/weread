<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_my_suibi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y428">
        <Button
            android:id="@+id/iv_return"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x28"
            android:background="#00000000"
            android:src="@drawable/title_jiantou_left_white"
            android:visibility="gone" />

        <ImageView
            android:alpha="0.6"
            android:src="@drawable/background"
            android:id="@+id/iv_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#00000000"
        android:layout_marginTop="@dimen/y363"
        android:layout_marginLeft="@dimen/x25"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/x130">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_my_suibi_icon1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/switchbutton_on1" />
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_my_suibi_icon"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:scaleType="fitXY"
            android:src="@drawable/avatar" />
        </RelativeLayout>
    <!--<ImageView
        android:layout_marginTop="@dimen/y363"
        android:layout_marginLeft="@dimen/x25"
        android:id="@+id/iv_my_suibi_icon1"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/y130"
        android:scaleType="fitXY"
        android:src="@drawable/switchbutton_on1" />
    <ImageView
        android:layout_marginTop="@dimen/y368"
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/iv_my_suibi_icon"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y120"
        android:scaleType="fitXY"
        android:src="@drawable/avatar" />-->
    <RelativeLayout
        android:id="@+id/rl_my_suibi_detail"
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
            <ImageView
                android:id="@+id/iv_my_suibi_xunzhang"
                android:layout_marginRight="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y66" />
            <View
                android:layout_centerVertical="true"
                android:id="@+id/v_my_suibi"
                android:background="@color/e5"
                android:layout_toLeftOf="@id/iv_my_suibi_xunzhang"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="1dp"
                android:layout_height="@dimen/y60"/>
            <RelativeLayout
                android:paddingTop="@dimen/y15"
                android:paddingBottom="@dimen/y15"
                android:paddingRight="@dimen/x30"
                android:layout_toLeftOf="@id/v_my_suibi"
                android:layout_marginLeft="@dimen/x180"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_suibi_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_my_suibi_name"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/y32"
                                android:textColor="@color/text_33"
                                android:text="name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/iv_my_suibi_gender"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/girl"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    <TextView
                        android:id="@+id/tv_my_suibi_name2"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/ll_suibi_name"
                        android:textColor="@color/text_66"
                        android:textSize="@dimen/y24"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/y15"
                        android:text="dengfenglai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
        </RelativeLayout>
    <View
        android:layout_below="@id/rl_my_suibi_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/e5" />
</RelativeLayout>