<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/bg" />

    <ImageView
        android:id="@+id/iv_discover_books_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_discover_books_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginStart="50dp"
            android:layout_toLeftOf="@+id/tv_discover_books_num"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/text_64"
            android:textSize="@dimen/y28" />


        <TextView
            android:id="@+id/tv_discover_books_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:singleLine="true"
            android:text="num"
            android:textColor="@color/text_99"
            android:textSize="@dimen/y24" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/e5" />


</LinearLayout>