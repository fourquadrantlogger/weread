<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popupwindow_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y545"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y250"
            android:gravity="center"
            android:text="手机号快捷登录"
            android:textColor="@color/text_32"
            android:textSize="@dimen/y42"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg" />

        <EditText
            android:id="@+id/et_denglu_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="手机号"
            android:numeric="integer"            android:textColor="@color/text_32"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/y36" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg" />

        <TextView
            android:id="@+id/tv_denglu_tishi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center"
            android:text=""
            android:background="@null"
            android:textColor="@color/text_98"
            android:textSize="@dimen/y26" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_denglu_lift"
                android:layout_width="0dp"
                android:layout_height="@dimen/y90"
                android:layout_weight="1"
                android:gravity="center"
                android:text="lift"
                android:textColor="@color/text_32"
                android:textSize="@dimen/y32" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg" />

            <TextView
                android:id="@+id/tv_denglu_right"
                android:layout_width="0dp"
                android:layout_height="@dimen/y90"
                android:layout_weight="1"
                android:gravity="center"
                android:text="right"
                android:textColor="@color/text_98"
                android:textSize="@dimen/y32" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>