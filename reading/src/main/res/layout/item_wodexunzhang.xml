<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="400px">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView_item_wodexunzhang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_wodexunzhang_title"
            android:gravity="center_horizontal"
            android:text="天使勋章"
            android:textColor="@color/text_64" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_wodexunzhang_createtime"
            android:text="2016/04/12"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/text_cc" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="top|right"
        android:id="@+id/item_wodexunzhang_choose"
        android:layout_width="wrap_content"
        android:src="@drawable/choose"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20" />
</FrameLayout>