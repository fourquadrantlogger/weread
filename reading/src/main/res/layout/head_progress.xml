<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_progress_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y530"
        android:background="@drawable/progress_bg"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_progress_avatar"
            android:layout_width="@dimen/y210"
            android:layout_height="@dimen/y210"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30">

            <ImageView
                android:id="@+id/iv_progress_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_white"
                android:padding="@dimen/x5"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/iv_progress_sex"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/y35"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_progress_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_progress_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:gravity="center"
            android:text="day"
            android:textColor="#50ffffff"
            android:textSize="@dimen/y24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x1"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_progress_duguo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_progress_duguo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y70"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:text=" / 本"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_progress_duguo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y7"
                android:text="读过"
                android:textColor="@color/text_99"
                android:textSize="@dimen/y26" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y60"
            android:background="@color/e5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x1"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_progress_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_progress_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y70"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:text=" / 次"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_progress_qiandao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y7"
                android:text="签到"
                android:textColor="@color/text_99"
                android:textSize="@dimen/y26" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y60"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x1"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@color/e5" />

            <LinearLayout
                android:id="@+id/ll_progress_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_progress_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y70"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:text=" / 个"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_progress_zan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y7"
                android:text="获赞"
                android:textColor="@color/text_99"
                android:textSize="@dimen/y26" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y60"
            android:background="@color/e5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x1"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@color/e5" />

            <LinearLayout
                android:id="@+id/ll_progress_suibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_progress_suibi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y70"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:text=" / 条"
                    android:textColor="@color/text_32"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_progress_suibi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y7"
                android:text="随笔"
                android:textColor="@color/text_99"
                android:textSize="@dimen/y26" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y60"
        android:background="@color/e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y60"
        android:drawableLeft="@drawable/yuan_progress_red"
        android:drawablePadding="@dimen/x30"
        android:gravity="center"
        android:text="在读"
        android:textColor="@color/text_32"
        android:textSize="@dimen/y30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view5"
            android:layout_width="@dimen/y1"
            android:layout_height="@dimen/y274"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x45"
            android:layout_marginTop="@dimen/y10"
            android:background="@color/e5" />

        <ImageView
            android:id="@+id/iv_progress_bookimg"
            android:layout_width="@dimen/x145"
            android:layout_height="@dimen/y184"
            android:layout_marginLeft="@dimen/x88"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/bg"
            android:padding="@dimen/x1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_progress_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_progress_bookimg"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toEndOf="@+id/iv_progress_bookimg"
            android:layout_toRightOf="@+id/iv_progress_bookimg"
            android:singleLine="true"
            android:text="bookname"
            android:textColor="@color/text_32"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/tv_progress_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_progress_bookname"
            android:layout_below="@+id/tv_progress_bookname"
            android:layout_marginTop="@dimen/y20"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/text_80"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/tv_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_progress_bookimg"
            android:layout_alignLeft="@+id/tv_progress_bookname"
            android:layout_toEndOf="@+id/iv_progress_bookimg"
            android:layout_toRightOf="@+id/iv_progress_bookimg"
            android:singleLine="true"
            android:text="time"
            android:textColor="@color/text_99"
            android:textSize="@dimen/y30" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_progress_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:drawableLeft="@drawable/yuan_progress_green"
        android:drawablePadding="@dimen/x30"
        android:gravity="center"
        android:text="读过"
        android:textColor="@color/text_32"
        android:textSize="@dimen/y30" />

    <View
        android:id="@+id/view6"
        android:layout_width="@dimen/y1"
        android:layout_height="@dimen/y40"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/e5" />

</LinearLayout>