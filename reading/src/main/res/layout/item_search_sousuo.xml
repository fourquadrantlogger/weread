<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search_sousuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_search_sousuo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/x28"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_99"
            android:textSize="@dimen/y32" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:background="@color/e5" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_search_huati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tv_search_huati_img"
            android:layout_width="@dimen/y200"
            android:layout_height="@dimen/y200"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x28"
            android:scaleType="fitXY"
            android:src="@drawable/zanwufengmian" />

        <TextView
            android:id="@+id/tv_search_huati_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_search_huati_img"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/tv_search_huati_img"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/text_32"
            android:textSize="@dimen/y34" />

        <TextView
            android:id="@+id/tv_search_huati_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_search_huati_title"
            android:layout_alignStart="@+id/tv_search_huati_title"
            android:layout_below="@+id/tv_search_huati_title"
            android:layout_marginTop="@dimen/y22"
            android:singleLine="true"
            android:text="content"
            android:textColor="@color/text_64"
            android:textSize="@dimen/y28" />

        <TextView
            android:id="@+id/tv_search_huati_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_search_huati_img"
            android:layout_alignLeft="@+id/tv_search_huati_title"
            android:layout_alignStart="@+id/tv_search_huati_title"
            android:singleLine="true"
            android:text="num"
            android:textColor="@color/text_99"
            android:textSize="@dimen/y24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/tv_search_huati_num"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/e5" />
    </RelativeLayout>


</LinearLayout>